
@model Abc.Northwind.MvcWebUI.Models.CategoryListViewModel
    <ul class="list-group">
        @foreach (var category in Model.Categories)
        {
            var css = "list-group-item";
            if(category.CategoryId == Model.CurrentCategory)
            {
                css += " active";
            }
            <li class="@css"><a style="color:darkslategray" href="/product/index?category=@category.CategoryId">@category.CategoryName</a></li>
         }
    </ul>